
<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.name %></td>
      <td><%= article.age %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'edit', edit_article_path(article) %></td>
      <td><%= link_to 'delete', article_path(article),
      method: :delete,
      data: { confirm: 'Are u sure?' } %></td>
    </tr>
      <% end %>
      <%= link_to 'new', new_article_path %>
    </table>